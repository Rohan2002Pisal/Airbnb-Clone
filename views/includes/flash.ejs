
<!-- Yani success exist karta hai and uski length > 0 hai tabhi ye code run hoga else nahi-->
<% if(success && success.length){  %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert"> <%= success %> 
      <button 
       type="button"
       class = "btn-close"
       data-bs-dismiss ="alert"
       aria-label = "Close" 
      >
             
      </button>
    </div>  
 <% } %>




