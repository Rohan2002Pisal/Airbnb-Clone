<% layout("layout/boilerplate.ejs") %>

<style>

    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter {
        text-align: center;
        margin-right: 2rem; 
        margin-top: 2rem; 
        /* margin: auto; */
        opacity: 0.7;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }

    .filter p{ 
        font-size: 0.8rem;
    }

    .btn-primary{
      margin: 0.5rem !important;
      border-radius: 0.3rem;
    }

   
    .tax-info {
     display: none;  /* So jab toggle "ON" hoga toh ye reset hona chaiye to "display:inline" cause it is an inline element, if it was an an block element then we would have done "display : block"  */
    }

    .tax-toggle {
        border : 1px solid black;
        border-radius : 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 2rem;
        display : flex;
        align-items: center;
    }
    
</style>


    <!-- <h3> All Listings </h3> -->

