       <div class="filter">
        <div>
            <i class="fa-solid fa-church"></i>
        </div>
        <p>Church</p>

      </div>


      <div class="filter">
        <div>
            <i class="fa-solid fa-tractor"></i>
        </div>
        <p>Farms</p>

      </div>


      <div class="filter">
        <div>
            <i class="fa-solid fa-person-swimming"></i>
        </div>
        <p>Swimming Pools</p>

      </div>

<!-- To display taxes-->
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          
            <input class="form-check-input"
            type="checkbox" 
            role="switch" 
             id="flexSwitchCheckDefault"> 

            <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
        </div>
      </div>



    </div>

    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1"> <!-- Responsive row and columns -->
        <% for(let lists of allListings){ %>
        <div class="col mb-4"> <!-- Ensure cards are spaced properly -->
            <a href="/listings/<%= lists._id %>" class="listing-link">
                <div class="card col listing-card"> <!-- Ensure full height for flex alignment -->
                    <img src="<%= lists.image.url %>" class="card-img-top" alt="listings_image" style="height: 20rem" />
                    <div class="card-img-overlay"> ABCD </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= lists.title %></h5>
                        <p class="card-text">
                            <%= lists.title %> <br />
                            &#8377; <%= lists.Price.toLocaleString("en-IN") %> /night
                            <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                        </p>
                        <a href="/listings/<%= lists._id %>" class="btn btn-primary">Check</a>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>

    <form method="GET" action="/listings/new">
        <button class="btn btn-primary">Add</button>
    </form>

<script>
    let Switch = document.getElementById("flexSwitchCheckDefault");
    Switch.addEventListener("click",  () => {
      let Switch = document.getElementsByClassName("tax-info");
      
      for(SwitchInfo of Switch){

        
        if(SwitchInfo.style.display != "inline"){
            SwitchInfo.style.display = "inline"
        }
        else{
             SwitchInfo.style.display = "none"
        }

      }
    });
</script>