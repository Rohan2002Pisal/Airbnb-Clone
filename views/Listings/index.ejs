            <p>Cities</p>
      </div>


      <div class="filter">
            <div>
                <i class="fa-solid fa-mountain"></i>
            </div>
            <p>Mountains</p>
       </div>


       <div class="filter">
            <div>
                <i class="fa-solid fa-utensils"></i>
            </div>
            <p>Food</p>
       </div>


       <div class="filter">
            <div>
                <i class="fa-solid fa-book"></i>
            </div>
            <p>Library</p>
       </div>

        
       <div class="filter">
            <div>
                <i class="fa-solid fa-plane-departure"></i>
            </div>
            <p>Airport</p>
       </div>



       <div class="filter">
            <div>
                <i class="fa-solid fa-taxi"></i>
            </div>
            <p>Travelling</p>
       </div>



       <div class="filter">
            <div>
                <i class="fa-solid fa-umbrella-beach"></i>
            </div>
